<Window x:Class="SysManager.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SysManager"
        Height="360" Width="520"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="White"
        AllowsTransparency="True"
        Opacity="0"
        d:Opacity="1"
        d:AllowsTransparency="False"
        d:Background="#222">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- CONȚINUT CENTRAL -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Source="Resources/logo.png"
                   Width="100" Height="100"
                   Margin="0,0,0,15"
                   Grid.Row="0"/>

            <TextBlock Text="SysManager POS"
                       FontSize="22" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"
                       Grid.Row="1"/>

            <TextBlock x:Name="txtStatus"
                       Text="Se verifică conexiunea..."
                       FontStyle="Italic" FontSize="13"
                       Foreground="#BBB"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"
                       Grid.Row="2"/>

            <ProgressBar x:Name="progressBar"
                         Width="350" Height="16"
                         Minimum="0" Maximum="100" Value="0"
                         Foreground="#4CAF50" Background="#333"
                         BorderThickness="0"
                         Grid.Row="3"/>

            <!-- SECTIUNEA DE EROARE -->
            <Grid Grid.Row="4" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="txtError"
                           Text=""
                           FontSize="13"
                           Foreground="#FF5555"
                           Visibility="Collapsed"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"
                           Grid.Row="0"/>

                <Button x:Name="btnClose"
                        Content="Închide aplicația"
                        Width="180" Height="32"
                        Background="#444" Foreground="White"
                        Visibility="Collapsed"
                        Click="btnClose_Click"
                        HorizontalAlignment="Center"
                        BorderThickness="0"
                        Cursor="Hand"
                        Grid.Row="1" Margin="0,0,0,10">
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="6"
                                                SnapsToDevicePixels="True">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="#444"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#666"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Grid>

        <!-- COPYRIGHT -->
        <TextBlock Text="© 2025 SysManager"
                   Grid.Row="1"
                   FontSize="11"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"
                   Foreground="#777"/>
    </Grid>
</Window>
