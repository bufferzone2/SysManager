<!-- MainWindow.xaml - NOUĂ CONFIGURAȚIE -->
<Window x:Class="SysManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:SysManager.Controls"
        Title="SysManager POS"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Width="1024"
        Height="760"
        Background="#A0C4E1">

    <Grid x:Name="MainGrid">
        <!-- ✅ NOUĂ STRUCTURĂ GRID -->
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <!-- Row 0: Header (Gestiuni + Data) -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Grupe (mici) -->
            <RowDefinition Height="*"/>
            <!-- Row 2: Produse (mari) -->
            <RowDefinition Height="30"/>
            <!-- Row 3: Footer -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Coloana stânga: Grupe + Produse -->
            <ColumnDefinition Width="380"/>
            <!-- Coloana dreapta: Bon (full height) -->
        </Grid.ColumnDefinitions>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- ROW 0: HEADER (GESTIUNI + DATA) - FULL WIDTH -->
        <!-- ═══════════════════════════════════════════════════════════════ -->

        <!-- ✅ Header Stânga: Gestiuni + Navigare Grupe -->
        <Border Grid.Row="0" Grid.Column="0" 
                Background="#5B9BD5" 
                BorderBrush="#3576B3" 
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Butoane gestiuni -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Navigare grupe -->
                </Grid.ColumnDefinitions>

                <!-- Butoane Gestiuni - Dinamice -->
                <UniformGrid x:Name="GestiuniPanel"
                             Grid.Column="0"
                             Rows="1"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             Margin="5,0" />

                <!-- Butoane Navigare Grupe -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Margin="5,0" 
                            VerticalAlignment="Center">
                    <Button x:Name="BtnPrevPage"
                            Content="◀"
                            Width="65"
                            Height="55"
                            Background="#2196F3"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            BorderThickness="1"
                            BorderBrush="#1976D2"
                            Margin="2"
                            Click="PrevPage_Click"
                            ToolTip="Pagina anterioară grupe"
                            IsEnabled="False"/>

                    <TextBlock x:Name="PageInfo"
                               Text="1/1"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5,0"/>

                    <Button x:Name="BtnNextPage"
                            Content="▶"
                            Width="65"
                            Height="55"
                            Background="#2196F3"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            BorderThickness="1"
                            BorderBrush="#1976D2"
                            Margin="2"
                            Click="NextPage_Click"
                            ToolTip="Pagina următoare grupe"
                            IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ✅ Header Dreapta: Data + Acțiuni -->
        <Border Grid.Row="0" Grid.Column="1" 
                Background="#5B9BD5" 
                BorderBrush="#3576B3" 
                BorderThickness="1,0,0,1">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Margin="10,0">
                <TextBlock Text="DATA ÎNCHIDERII:"
                           Foreground="White"
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>

                <Border Background="White" 
                        CornerRadius="2" 
                        Padding="5,2" 
                        Margin="0,0,10,0">
                    <TextBlock x:Name="DataInchiderii"
                               Text="25.12.2025"
                               Foreground="#0066CC"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </Border>

                <Button Content="✓"
                        Width="30"
                        Height="30"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Margin="2"
                        ToolTip="Salvează"/>

                <Button Content="⚙"
                        Width="30"
                        Height="30"
                        Background="#E53935"
                        Foreground="White"
                        FontSize="16"
                        Margin="2"
                        Click="Exit_Click"
                        ToolTip="Ieșire"/>
            </StackPanel>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- ROW 1: GRUPE (STÂNGA) + TEXTBOX-URI CĂUTARE (DREAPTA) -->
        <!-- ═══════════════════════════════════════════════════════════════ -->

        <!-- ✅ Stânga: Butoane Grupe - Multiple Rânduri -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="#7BADD9" 
                BorderBrush="#5B9BD5" 
                BorderThickness="0,0,0,1"
                ClipToBounds="True">
            <UniformGrid x:Name="GroupsPanel"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="0"
                         Background="Transparent" />
        </Border>

        <!-- ✅ Dreapta: TextBox-uri Cantitate + Căutare -->
        <Border Grid.Row="1" Grid.Column="1" 
                Background="#7BADD9" 
                BorderBrush="#5B9BD5" 
                BorderThickness="1,0,0,1"
                Padding="5">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <!-- Cantitate -->
                    <ColumnDefinition Width="*"/>
                    <!-- Căutare -->
                </Grid.ColumnDefinitions>

                <!-- TextBox Cantitate -->
                <Border Grid.Column="0" 
                        Background="White" 
                        BorderBrush="#0066CC" 
                        BorderThickness="2" 
                        CornerRadius="2"
                        Margin="0,0,4,0">
                    <TextBox x:Name="TxtCantitate"
                             Text="1"
                             FontSize="16"
                             FontWeight="Bold"
                             Foreground="#0066CC"
                             TextAlignment="Center"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Background="Transparent"
                             Height="32"
                             ToolTip="Cantitate articol"/>
                </Border>

                <!-- TextBox Căutare Articol -->
                <Border Grid.Column="1" 
                        Background="White" 
                        BorderBrush="#0066CC" 
                        BorderThickness="2" 
                        CornerRadius="2">
                    <TextBox x:Name="TxtCautareArticol"
                             FontSize="14"
                             Foreground="#333333"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Background="Transparent"
                             Height="32"
                             Padding="8,0"
                             ToolTip="Caută articol după denumire sau cod">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="🔍 Caută articol..."
                                                                   Foreground="#999999"
                                                                   FontSize="14"
                                                                   Margin="8,0,0,0"
                                                                   VerticalAlignment="Center"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Border>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- ROW 2: PRODUSE (STÂNGA) + BON (DREAPTA - FULL HEIGHT) -->
        <!-- ═══════════════════════════════════════════════════════════════ -->

        <!-- ✅ Stânga: Zona Produse + Navigare -->
        <Border Grid.Row="2" Grid.Column="0" 
                Background="#A0C4E1" 
                Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <!-- Produse -->
                    <RowDefinition Height="Auto"/>
                    <!-- Navigare -->
                </Grid.RowDefinitions>

                <!-- Panou Produse -->
                <UniformGrid x:Name="ProductsPanel"
                             Grid.Row="0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Background="Transparent"
                             ClipToBounds="False" />

                <!-- Butoane Navigare Produse -->
                <Border Grid.Row="1" 
                        Background="#5B9BD5" 
                        Padding="5" 
                        Margin="0,5,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="ProductPageInfo"
                                   Grid.Column="0"
                                   Text="1/1"
                                   Foreground="White"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="15,0,0,0"/>

                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                            <Button x:Name="BtnPrevProductPage"
                                    Content="◀"
                                    Width="65"
                                    Height="55"
                                    Background="#2196F3"
                                    Foreground="White"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    BorderThickness="1"
                                    BorderBrush="#1976D2"
                                    Margin="1,0"
                                    Click="PrevProductPage_Click"
                                    ToolTip="Pagina anterioară produse"
                                    IsEnabled="False"/>

                            <Button x:Name="BtnNextProductPage"
                                    Content="▶"
                                    Width="65"
                                    Height="55"
                                    Background="#2196F3"
                                    Foreground="White"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    BorderThickness="1"
                                    BorderBrush="#1976D2"
                                    Margin="1,0"
                                    Click="NextProductPage_Click"
                                    ToolTip="Pagina următoare produse"
                                    IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ✅ Dreapta: Panou BON (FULL HEIGHT - Rows 1+2) -->
        <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" 
        Background="#F0F0F0" 
        Margin="5,0,5,5" 
        BorderBrush="#999999" 
        BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Row 0: TextBox-uri Cantitate + Căutare BON -->
                    <RowDefinition Height="*"/>
                    <!-- Row 1: DataGrid BON -->
                    <RowDefinition Height="Auto"/>
                    <!-- Row 2: Total -->
                    <RowDefinition Height="Auto"/>
                    <!-- Row 3: Butoane -->
                </Grid.RowDefinitions>

                <!-- ═══════════════════════════════════════════════════════════ -->
                <!-- ROW 0: TEXTBOX-URI CANTITATE + CĂUTARE (DEASUPRA BON) -->
                <!-- ═══════════════════════════════════════════════════════════ -->
                <Border Grid.Row="0" 
                Background="#7BADD9" 
                BorderBrush="#5B9BD5" 
                BorderThickness="0,0,0,1"
                Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <!-- Cantitate -->
                            <ColumnDefinition Width="*"/>
                            <!-- Căutare -->
                        </Grid.ColumnDefinitions>

                        <!-- ✅ TEXTBOX CANTITATE BON -->
                        <Border Grid.Column="0" 
                        Background="White" 
                        BorderBrush="#0066CC" 
                        BorderThickness="2" 
                        CornerRadius="2"
                        Margin="0,0,4,0">
                            <TextBox x:Name="TxtCantitateBon"
                             Text="1"
                             FontSize="16"
                             FontWeight="Bold"
                             Foreground="#0066CC"
                             TextAlignment="Center"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Background="Transparent"
                             Height="32"
                             ToolTip="Cantitate articol pentru BON"/>
                        </Border>

                        <!-- ✅ TEXTBOX CĂUTARE ARTICOL BON -->
                        <Border Grid.Column="1" 
                        Background="White" 
                        BorderBrush="#0066CC" 
                        BorderThickness="2" 
                        CornerRadius="2">
                            <TextBox x:Name="TxtCautareArticolBon"
                             FontSize="14"
                             Foreground="#333333"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Background="Transparent"
                             Height="32"
                             Padding="8,0"
                             TextChanged="TxtCautareArticolBon_TextChanged">
                             ToolTip="Caută articol după denumire sau cod pentru BON">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="🔍 Caută în BON..."
                                                                   Foreground="#999999"
                                                                   FontSize="14"
                                                                   Margin="8,0,0,0"
                                                                   VerticalAlignment="Center"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Border>
                    </Grid>
                </Border>

                <!-- ═══════════════════════════════════════════════════════════════ -->
                <!-- ROW 1: DATAGRID BON -->
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <DataGrid x:Name="BonGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  Background="White"
                  Foreground="Black"
                  HeadersVisibility="Column"
                  RowHeight="35"
                  FontSize="13"
                  GridLinesVisibility="Horizontal"
                  BorderThickness="0"
                  Margin="5"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <!-- ✅ Coloana Produs - fără formatare -->
                        <DataGridTextColumn Header="Produs" 
                            Binding="{Binding Nume}" 
                            Width="*" 
                            IsReadOnly="True"/>

                        <!-- ✅ Coloana Cantitate - 3 ZECIMALE (ex: 1.000) -->
                        <DataGridTextColumn Header="Cant" 
                            Binding="{Binding Cantitate, StringFormat={}{0:F3}}" 
                            Width="60" 
                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="#666666"/>
                                    <!-- Culoare gri -->
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- ✅ Coloana Total - 2 ZECIMALE (ex: 45.00) -->
                        <DataGridTextColumn Header="Total" 
                            Binding="{Binding PretBrut, StringFormat={}{0:F2}}" 
                            Width="80" 
                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Foreground" Value="#666666"/>
                                    <!-- Culoare gri -->
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- ═══════════════════════════════════════════════════════════ -->
                <!-- ROW 2: TOTAL -->
                <!-- ═══════════════════════════════════════════════════════════ -->
                <Border Grid.Row="2" 
                Background="#0066CC" 
                Padding="15,10" 
                Margin="5">
                    <Grid>
                        <TextBlock Text="TOTAL"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                        <TextBlock x:Name="TotalText"
                           Text="0.00"
                           Foreground="White"
                           FontSize="28"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
                    </Grid>
                </Border>

                <!-- ═══════════════════════════════════════════════════════════ -->
                <!-- ROW 3: BUTOANE ACȚIUNI -->
                <!-- ═══════════════════════════════════════════════════════════ -->
                <UniformGrid Grid.Row="3" 
                     Columns="3" 
                     Margin="5,5,5,10">
                    <Button Content="ANULARE BON"
                    Background="#E53935"
                    Foreground="White"
                    FontSize="12"
                    FontWeight="Bold"
                    Height="50"
                    Margin="2"
                    Click="Clear_Click"/>

                    <Button Content="DESCHIDE&#x0a;CASĂ"
                    Background="#4CAF50"
                    Foreground="White"
                    FontSize="12"
                    FontWeight="Bold"
                    Height="50"
                    Margin="2"/>

                    <Button Content="NOTA DE PLATĂ"
                    Background="#2196F3"
                    Foreground="White"
                    FontSize="12"
                    FontWeight="Bold"
                    Height="50"
                    Margin="2"
                    Click="SalveazaBonAsteptare_Click"/>

                    <Button Content="ÎNCASARE"
                    Background="#43A047"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Height="60"
                    Margin="2"
                    Grid.ColumnSpan="3"
                    Click="Pay_Click"/>
                </UniformGrid>
            </Grid>
        </Border>


        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- ROW 3: FOOTER - FULL WIDTH -->
        <!-- ═══════════════════════════════════════════════════════════════ -->

        <Border Grid.Row="3" Grid.ColumnSpan="2" 
        Background="#5B9BD5" 
        BorderBrush="#3576B3" 
        BorderThickness="0,1,0,0"
        Height="30">
            <Grid>
                <!-- ✅ Stânga: Imagine + Status -->
                <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center">

                    <Image x:Name="IconHelp" 
                   Source="/Resources/Blue_MSG_INFO22.GIF" 
                   Width="24" 
                   Height="24" 
                   VerticalAlignment="Center"
                   Margin="4,0,8,0" />

                    <TextBlock x:Name="StatusText"
                       Text="Gata pentru comenzi"
                       Foreground="White"
                       FontSize="11"
                       VerticalAlignment="Center"/>
                </StackPanel>

                <!-- ✅ Dreapta: Server Info -->
                <TextBlock x:Name="TextServer"
                   Text="SERVER: SRV-POS-01 | UTILIZATOR: Admin"
                   Foreground="White"
                   FontSize="11"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,0"/>
            </Grid>
        </Border>

    </Grid>
</Window>
