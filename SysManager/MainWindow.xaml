                                <controls:BtnUniversal x:Name="BtnTest"
                                    BtnName=""
                                    BtnColor="#43A047"
                                    Height="55"
                                    Margin="0,0,0,5"               
                                    BtnFontSize="12"
                                    BtnImageStretch="Uniform"
                                    BtnImagePath="/Resources/settings.png"
                                    BtnImageOpacity="1"/>
