                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- Buton 4: Sterge cantitate -->
                                <Button x:Name="BtnDelCant"
                                        Content="-"
                                        Background="#9C27B0"
                                        Foreground="White"
                                        FontSize="24"
                                        FontWeight="Bold"
                                        Height="55"
                                        Margin="0,0,0,5"
                                        Click="BtnDelCant_Click"
