                        Margin="5">
                    <Grid>
                        <TextBlock Text="TOTAL"
                                   Foreground="White"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"/>
