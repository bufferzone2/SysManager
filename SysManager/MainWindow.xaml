<!-- MainWindow.xaml - NOUĂ CONFIGURAȚIE CU BUTOANE ÎN ROW 1 -->
<Window x:Class="SysManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:SysManager.Controls"
        Title="SysManager POS"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Width="1024"
        Height="760"
        Background="#A0C4E1">

    <Grid x:Name="MainGrid">
        <!-- ✅ NOUĂ STRUCTURĂ GRID -->
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <!-- Row 0: Header (Gestiuni + Data) -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Grupe (mici) -->
            <RowDefinition Height="*"/>
            <!-- Row 2: Produse (mari) -->
            <RowDefinition Height="30"/>
            <!-- Row 3: Footer -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Coloana stânga: Grupe + Produse -->
            <ColumnDefinition Width="400"/>
            <!-- Coloana dreapta: Bon (full height) -->
        </Grid.ColumnDefinitions>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- ROW 0: HEADER (GESTIUNI + DATA) - FULL WIDTH -->
        <!-- ═══════════════════════════════════════════════════════════════ -->

        <!-- ✅ Header Stânga: Gestiuni + Navigare Grupe -->
        <Border Grid.Row="0" Grid.Column="0" 
                Background="#5B9BD5" 
                BorderBrush="#3576B3" 
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Butoane gestiuni -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Navigare grupe -->
                </Grid.ColumnDefinitions>

                <!-- Butoane Gestiuni - Dinamice -->
                <StackPanel x:Name="GestiuniPanel"
                    Grid.Column="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="5,0" />

                <!-- Butoane Navigare Grupe -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Margin="5,0" 
                            VerticalAlignment="Center">
                    <Button x:Name="BtnPrevPage"
                            Content="◀"
                            Width="65"
                            Height="55"
                            Background="#2196F3"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            BorderThickness="1"
                            BorderBrush="#1976D2"
                            Margin="2"
                            Click="PrevPage_Click"
                            ToolTip="Pagina anterioară grupe"
                            IsEnabled="False">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#2196F3"/>
                                <Setter Property="BorderBrush" Value="#1976D2"/>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                        <Setter Property="BorderBrush" Value="#9E9E9E"/>
                                        <Setter Property="Foreground" Value="#757575"/>
                                        <Setter Property="Opacity" Value="0.65"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock x:Name="PageInfo"
                               Text="1/1"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="5,0"/>

                    <Button x:Name="BtnNextPage"
                            Content="▶"
                            Width="65"
                            Height="55"
                            Background="#2196F3"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            BorderThickness="1"
                            BorderBrush="#1976D2"
                            Margin="2"
                            Click="NextPage_Click"
                            ToolTip="Pagina următoare grupe"
                            IsEnabled="False">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#2196F3"/>
                                <Setter Property="BorderBrush" Value="#1976D2"/>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                        <Setter Property="BorderBrush" Value="#9E9E9E"/>
                                        <Setter Property="Foreground" Value="#757575"/>
                                        <Setter Property="Opacity" Value="0.65"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ✅ Header Dreapta: Data + Acțiuni -->
        <Border Grid.Row="0" Grid.Column="1" 
                Background="#5B9BD5" 
                BorderBrush="#3576B3" 
                BorderThickness="1,0,0,1">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Margin="10,0">
                <TextBlock Text="DATA ÎNCHIDERII:"
                           Foreground="White"
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>

                <Border Background="White" 
                        CornerRadius="2" 
                        Padding="5,2" 
                        Margin="0,0,10,0">
                    <TextBlock x:Name="DataInchiderii"
                               Text="25.12.2025"
                               Foreground="#0066CC"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </Border>

                <Button Content="✓"
                        Width="30"
                        Height="30"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Margin="2"
                        ToolTip="Salvează"/>

                <Button Content="⚙"
                        Width="30"
                        Height="30"
                        Background="#E53935"
                        Foreground="White"
                        FontSize="16"
                        Margin="2"
                        Click="Exit_Click"
                        ToolTip="Ieșire"/>
            </StackPanel>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- ROW 1: GRUPE (STÂNGA) + TEXTBOX-URI CĂUTARE (DREAPTA) -->
        <!-- ═══════════════════════════════════════════════════════════════ -->

        <!-- ✅ Stânga: Butoane Grupe - Multiple Rânduri -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="#7BADD9" 
                BorderBrush="#5B9BD5" 
                BorderThickness="0,0,0,1"
                ClipToBounds="True">
            <UniformGrid x:Name="GroupsPanel"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="0"
                         Background="Transparent" />
        </Border>

        <!-- ✅ Dreapta: TextBox-uri Cantitate + Căutare -->
        <Border Grid.Row="1" Grid.Column="1" 
                Background="#7BADD9" 
                BorderBrush="#5B9BD5" 
                BorderThickness="1,0,0,1"
                Padding="5">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- TextBox Cantitate -->
                <Border Grid.Column="0" 
                        Background="White" 
                        BorderBrush="#0066CC" 
                        BorderThickness="2" 
                        CornerRadius="2"
                        Margin="0,0,4,0">
                    <TextBox x:Name="TxtCantitate"
                             Text="1"
                             FontSize="16"
                             FontWeight="Bold"
                             Foreground="#0066CC"
                             TextAlignment="Center"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Background="Transparent"
                             Height="32"
                             ToolTip="Cantitate articol"/>
                </Border>

                <!-- TextBox Căutare Articol -->
                <Border Grid.Column="1" 
                        Background="White" 
                        BorderBrush="#0066CC" 
                        BorderThickness="2" 
                        CornerRadius="2">
                    <TextBox x:Name="TxtCautareArticol"
                             FontSize="14"
                             Foreground="#333333"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Background="Transparent"
                             Height="32"
                             Padding="8,0"
                             ToolTip="Caută articol după denumire sau cod">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="🔍 Caută articol..."
                                                                   Foreground="#999999"
                                                                   FontSize="14"
                                                                   Margin="8,0,0,0"
                                                                   VerticalAlignment="Center"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Border>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- ROW 2: PRODUSE (STÂNGA) + BON (DREAPTA - FULL HEIGHT) -->
        <!-- ═══════════════════════════════════════════════════════════════ -->

        <!-- ✅ Stânga: Zona Produse + Navigare -->
        <Border Grid.Row="2" Grid.Column="0" 
                Background="#A0C4E1" 
                Padding="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Panou Produse -->
                <UniformGrid x:Name="ProductsPanel"
                             Grid.Row="0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Background="Transparent"
                             ClipToBounds="False" />

                <!-- ✅ OVERLAY PENTRU MESAJ (DEASUPRA ProductsPanel) -->
                <Border x:Name="NoProductsOverlay"
                Grid.Row="0"
                Background="#FFF5F5"
                BorderBrush="#E53935"
                BorderThickness="3"
                CornerRadius="8"
                Margin="20"
                MaxWidth="400"
                MaxHeight="250"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                        <TextBlock Text="❌"
                           FontSize="80"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                        <TextBlock x:Name="NoProductsTitle"
                           Text="NU AM GĂSIT ARTICOLE"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#E53935"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                        <TextBlock x:Name="NoProductsSearch"
                           Text="Căutare: &quot;...&quot;"
                           FontSize="18"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>
                    </StackPanel>
                </Border>
                <!-- Butoane Navigare Produse -->
                <Border Grid.Row="1" 
                        Background="#5B9BD5" 
                        Padding="5" 
                        Margin="5,4,0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="ProductPageInfo"
                                   Grid.Column="0"
                                   Text="1/1"
                                   Foreground="White"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="15,0,0,0"/>

                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right">
                            <Button x:Name="BtnPrevProductPage"
                                    Content="◀"
                                    Width="65"
                                    Height="55"
                                    Foreground="White"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    BorderThickness="1"
                                    Margin="1,0"
                                    Click="PrevProductPage_Click"
                                    ToolTip="Pagina anterioară produse"
                                    IsEnabled="False">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#2196F3"/>
                                        <Setter Property="BorderBrush" Value="#1976D2"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#BDBDBD"/>
                                                <Setter Property="BorderBrush" Value="#9E9E9E"/>
                                                <Setter Property="Foreground" Value="#757575"/>
                                                <Setter Property="Opacity" Value="0.65"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button x:Name="BtnNextProductPage"
                                    Content="▶"
                                    Width="65"
                                    Height="55"
                                    Background="#2196F3"
                                    Foreground="White"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    BorderThickness="1"
                                    BorderBrush="#1976D2"
                                    Margin="1,0"
                                    Click="NextProductPage_Click"
                                    ToolTip="Pagina următoare produse"
                                    IsEnabled="False">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#2196F3"/>
                                        <Setter Property="BorderBrush" Value="#1976D2"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#BDBDBD"/>
                                                <Setter Property="BorderBrush" Value="#9E9E9E"/>
                                                <Setter Property="Foreground" Value="#757575"/>
                                                <Setter Property="Opacity" Value="0.65"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ✅ Dreapta: Panou BON (FULL HEIGHT - Rows 1+2) -->
        <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" 
                Background="#F0F0F0" 
                Margin="5,0,5,5" 
                BorderBrush="#999999" 
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Row 0: TextBox-uri Cantitate + Căutare BON -->
                    <RowDefinition Height="*"/>
                    <!-- Row 1: DataGrid BON + Butoane -->
                    <RowDefinition Height="Auto"/>
                    <!-- Row 2: Total -->
                    <RowDefinition Height="Auto"/>
                    <!-- Row 3: Butoane -->
                </Grid.RowDefinitions>

                <!-- ═══════════════════════════════════════════════════════════ -->
                <!-- ROW 0: TEXTBOX-URI CANTITATE + CĂUTARE (DEASUPRA BON) -->
                <!-- ═══════════════════════════════════════════════════════════ -->
                <Border Grid.Row="0" 
                        Background="#7BADD9" 
                        BorderBrush="#5B9BD5" 
                        BorderThickness="0,0,0,1"
                        Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- TextBox Cantitate BON - Click pentru Tastatură Numerică -->
                        <Border Grid.Column="0" 
                                Background="White" 
                                BorderBrush="#0066CC" 
                                BorderThickness="2" 
                                CornerRadius="2"
                                Margin="0,0,4,0"
                                Cursor="Hand"
                                MouseDown="TxtCantitateBon_MouseDown"
                                ToolTip="Click pentru a introduce cantitatea">
                            <TextBox x:Name="TxtCantitateBon"
                                     Text="1.000"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="#0066CC"
                                     TextAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Height="32"
                                     IsReadOnly="True"
                                     Cursor="Hand"
                                     Focusable="False"/>
                        </Border>

                        <!-- ✅ TEXTBOX CĂUTARE ARTICOL BON CU BUTON TASTATURĂ -->
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>

                            <!-- TextBox Căutare -->
                            <Border Grid.Column="0"
                                    Background="White" 
                                    BorderBrush="#0066CC" 
                                    BorderThickness="2,2,0,2"
                                    CornerRadius="2,0,0,2">
                                <TextBox x:Name="TxtCautareArticolBon"
                                         FontSize="14"
                                         Foreground="#333333"
                                         VerticalContentAlignment="Center"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Height="32"
                                         Padding="8,0"
                                         TextChanged="TxtCautareArticolBon_TextChanged"
                                         ToolTip="Caută articol după denumire sau cod">
                                    <TextBox.Style>
                                        <Style TargetType="{x:Type TextBox}">
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                                <VisualBrush.Visual>
                                                                    <TextBlock Text="🔍 Caută în BON..."
                                                                               Foreground="#999999"
                                                                               FontSize="14"
                                                                               Margin="8,0,0,0"
                                                                               VerticalAlignment="Center"/>
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Border>

                            <!-- Buton Tastatură -->
                            <Button Grid.Column="1"
                                    Background="#0066CC"
                                    BorderBrush="#0066CC"
                                    BorderThickness="2"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch"
                                    Cursor="Hand"
                                    ToolTip="Deschide tastatura"
                                    Click="BtnKeyboard_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="0,2,2,0">
                                                        <Viewbox Width="20" Height="20">
                                                            <Canvas Width="24" Height="24">
                                                                <Rectangle Canvas.Left="2" Canvas.Top="6" 
                                                                           Width="20" Height="14" 
                                                                           Fill="White" 
                                                                           Stroke="White" 
                                                                           StrokeThickness="1"
                                                                           RadiusX="1" RadiusY="1"/>
                                                                <Rectangle Canvas.Left="3" Canvas.Top="8" Width="2" Height="2" Fill="#0066CC"/>
                                                                <Rectangle Canvas.Left="6" Canvas.Top="8" Width="2" Height="2" Fill="#0066CC"/>
                                                                <Rectangle Canvas.Left="9" Canvas.Top="8" Width="2" Height="2" Fill="#0066CC"/>
                                                                <Rectangle Canvas.Left="12" Canvas.Top="8" Width="2" Height="2" Fill="#0066CC"/>
                                                                <Rectangle Canvas.Left="15" Canvas.Top="8" Width="2" Height="2" Fill="#0066CC"/>
                                                                <Rectangle Canvas.Left="18" Canvas.Top="8" Width="2" Height="2" Fill="#0066CC"/>
                                                                <Rectangle Canvas.Left="3" Canvas.Top="11" Width="2" Height="2" Fill="#0066CC"/>
                                                                <Rectangle Canvas.Left="6" Canvas.Top="11" Width="2" Height="2" Fill="#0066CC"/>
                                                                <Rectangle Canvas.Left="9" Canvas.Top="11" Width="2" Height="2" Fill="#0066CC"/>
                                                                <Rectangle Canvas.Left="12" Canvas.Top="11" Width="2" Height="2" Fill="#0066CC"/>
                                                                <Rectangle Canvas.Left="15" Canvas.Top="11" Width="2" Height="2" Fill="#0066CC"/>
                                                                <Rectangle Canvas.Left="18" Canvas.Top="11" Width="2" Height="2" Fill="#0066CC"/>
                                                                <Rectangle Canvas.Left="6" Canvas.Top="14" Width="12" Height="2" Fill="#0066CC"/>
                                                            </Canvas>
                                                        </Viewbox>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#0052A3"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#003D82"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>

                <!-- ═══════════════════════════════════════════════════════════════ -->
                <!-- ROW 1: DATAGRID BON + BUTOANE (2 COLOANE) -->
                <!-- ═══════════════════════════════════════════════════════════════ -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- BonGrid -->
                        <ColumnDefinition Width="80"/>
                        <!-- Butoane verticale -->
                    </Grid.ColumnDefinitions>

                    <!-- COLOANA 0: DATAGRID BON -->
                    <ScrollViewer x:Name="BonScrollViewer"
                                  Grid.Column="0"
                                  VerticalScrollBarVisibility="Hidden"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Margin="5">
                        <DataGrid x:Name="BonGrid"
                                  AutoGenerateColumns="False"
                                  Background="White"
                                  Foreground="Black"
                                  HeadersVisibility="Column"
                                  RowHeight="35"
                                  FontSize="13"
                                  GridLinesVisibility="Horizontal"
                                  BorderThickness="0"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow">
                            <!-- ✅ STYLING PENTRU SELECȚIE PERSISTENTĂ (CU SAU FĂRĂ FOCUS) -->
                            <DataGrid.Resources>
                                <!-- Stil pentru DataGridRow -->
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="Black"/>

                                    <Style.Triggers>
                                        <!-- ✅ SELECȚIE CU FOCUS (DataGrid activ) -->
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsSelected" Value="True"/>
                                                <Condition Property="Selector.IsSelectionActive" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Background" Value="#2196F3"/>
                                            <!-- Albastru intens -->
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </MultiTrigger>

                                        <!-- ✅ SELECȚIE FĂRĂ FOCUS (DataGrid inactiv) -->
                                        <!-- ACEASTA ESTE LINIA CRITICĂ! -->
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsSelected" Value="True"/>
                                                <Condition Property="Selector.IsSelectionActive" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <!-- ✅ FOLOSEȘTE ACEEAȘI CULOARE CA ȘI CU FOCUS! -->
                                            <Setter Property="Background" Value="#2196F3"/>
                                            <!-- SAU poți folosi o culoare puțin mai deschisă: #42A5F5 -->
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </MultiTrigger>
                                    </Style.Triggers>
                                </Style>

                                <!-- Stil pentru DataGridCell -->
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>

                                    <Style.Triggers>
                                        <!-- Celulă selectată CU focus -->
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsSelected" Value="True"/>
                                                <Condition Property="Selector.IsSelectionActive" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                        </MultiTrigger>

                                        <!-- ✅ Celulă selectată FĂRĂ focus -->
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsSelected" Value="True"/>
                                                <Condition Property="Selector.IsSelectionActive" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                        </MultiTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <!-- ✅ Coloana Produs - CU TEXT WRAPPING PE 2 RÂNDURI -->
                                <DataGridTextColumn Header="Produs" 
                                                    Binding="{Binding Nume}" 
                                                    Width="*" 
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Padding" Value="2"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- ✅ Coloana Cantitate - 3 ZECIMALE (ex: 1.000) -->
                                <DataGridTextColumn Header="Cant" 
                                                    Binding="{Binding Cantitate, StringFormat={}{0:F3}}" 
                                                    Width="50" 
                                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
