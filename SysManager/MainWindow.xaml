                <!-- ═══════════════════════════════════════════════════════════ -->
                <!-- ROW 3: BUTOANE ACTIUNI -->
                <!-- ═══════════════════════════════════════════════════════════ -->
                <Border Grid.Row="3" Margin="5,5,5,5">
                    <Grid>
