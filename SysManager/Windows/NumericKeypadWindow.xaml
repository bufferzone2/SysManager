<!-- NumericKeypadWindow.xaml -->
<Window x:Class="SysManager.Windows.NumericKeypadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:SysManager.Controls"
        Title="Introducere Cantitate"
        Width="327"
        Height="327"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Border Background="#F5F5F5"
            BorderBrush="#0066CC"
            BorderThickness="3"
            CornerRadius="10">
        <!-- ✅ CORECTAT: DropShadowEffect definit inline, nu ca StaticResource -->
        <Border.Effect>
            <DropShadowEffect Color="Black"
                              Direction="315"
                              ShadowDepth="5"
                              Opacity="0.3"
                              BlurRadius="10"/>
        </Border.Effect>

        <Grid Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="100*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Keypad -->
            </Grid.RowDefinitions>

            <!-- ═══════════════════════════════════════ -->
            <!-- HEADER -->
            <!-- ═══════════════════════════════════════ -->

            <!-- ═══════════════════════════════════════ -->
            <!-- NUMERIC KEYPAD -->
            <!-- ═══════════════════════════════════════ -->
            <controls:NumericKeypad x:Name="Keypad"
                                    Grid.Row="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="0,0,0,0"/>
        </Grid>
    </Border>
</Window>
