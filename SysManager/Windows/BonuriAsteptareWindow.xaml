<Window x:Class="SysManager.BonuriAsteptareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bonuri în Așteptare"
        Width="600"
        Height="500"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="CanResize" 
        ShowInTaskbar="False" 
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ═══════════════════════════════════════════════ -->
        <!-- HEADER -->
        <!-- ═══════════════════════════════════════════════ -->
        <Border Grid.Row="0" Background="#5B9BD5" Padding="15">
            <TextBlock Text="📋 BONURI ÎN AȘTEPTARE"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- ═══════════════════════════════════════════════ -->
        <!-- LISTĂ BONURI CU SCROLL CONTROLAT -->
        <!-- ═══════════════════════════════════════════════ -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Lista bonuri -->
                <ColumnDefinition Width="80"/>
                <!-- Butoane scroll -->
            </Grid.ColumnDefinitions>

            <!-- LISTA BONURI -->
            <ScrollViewer x:Name="BonuriScrollViewer"
                          Grid.Column="0"
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="BonuriListView">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="15"
                                    Margin="0,0,0,10"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="BonCard_Click"
                                    Tag="{Binding}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E3F2FD"/>
                                                <Setter Property="BorderBrush" Value="#2196F3"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- ✅ Informații Bon -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding DisplayText}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="#333333"/>
                                        <TextBlock Text="{Binding DisplayInfo}"
                                                   FontSize="12"
                                                   Foreground="#666666"
                                                   Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding Observatii}"
                                                   FontSize="11"
                                                   Foreground="#999999"
                                                   Margin="0,3,0,0"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <!-- ✅ Buton Șterge -->
                                    <Button Grid.Column="1"
                                            Content="🗑️"
                                            Width="50"
                                            Height="50"
                                            Background="#E53935"
                                            Foreground="White"
                                            FontSize="18"
                                            ToolTip="Șterge bonul"
                                            Click="DeleteBon_Click"
                                            Tag="{Binding Id}"
                                            VerticalAlignment="Center"
                                            Margin="10,0,0,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border"
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderBrush="#C62828"
                                                                    BorderThickness="2"
                                                                    CornerRadius="4">
                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                                  VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#D32F2F"/>
                                                                </Trigger>
                                                                <Trigger Property="IsPressed" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#B71C1C"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- BUTOANE SCROLL (Sus/Jos) -->
            <StackPanel Grid.Column="1" 
                        Orientation="Vertical"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0">

                <!-- Buton Scroll SUS -->
                <Button x:Name="BtnScrollUp"
                        Content="▲"
                        Background="#0066CC"
                        Foreground="White"
                        FontSize="24"
                        FontWeight="Bold"
                        Height="80"
                        Margin="0,0,0,10"
                        Click="BtnScrollUp_Click"
                        ToolTip="Derulare sus">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="#004C99"
                                                BorderThickness="2"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#0052A3"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#003D82"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Buton Scroll JOS -->
                <Button x:Name="BtnScrollDown"
                        Content="▼"
                        Background="#0066CC"
                        Foreground="White"
                        FontSize="24"
                        FontWeight="Bold"
                        Height="80"
                        Margin="0"
                        Click="BtnScrollDown_Click"
                        ToolTip="Derulare jos">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="#004C99"
                                                BorderThickness="2"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#0052A3"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#003D82"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!-- ═══════════════════════════════════════════════ -->
        <!-- BUTOANE ACȚIUNI -->
        <!-- ═══════════════════════════════════════════════ -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10">

            <Button Content="ANULARE"
                    Width="150"
                    Height="50"
                    Background="IndianRed"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Click="Anulare_Click"
                    ToolTip="Închide fereastra"/>
        </StackPanel>
    </Grid>
</Window>
