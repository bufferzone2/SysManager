<Window x:Class="SysManager.Windows.IncasareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:SysManager.Controls"
        Title="Încasare rapidă"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="550"
        Height="600"
        Background="White" 
        ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Total de plată -->
            <RowDefinition Height="*"/>
            <!-- Butoane metode -->
            <RowDefinition Height="Auto"/>
            <!-- Info bon + butoane acțiune -->
        </Grid.RowDefinitions>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- HEADER -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Border Grid.Row="0" 
                Background="#5B9BD5" 
                Padding="15,10">
            <TextBlock Text="Încasare rapidă"
                    Foreground="White"
                    FontSize="18"
                    FontWeight="Bold"
                    HorizontalAlignment="Left"/>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- TOTAL DE PLATĂ -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Border Grid.Row="1" 
                Background="White"
                Padding="20"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1">
            <TextBlock Name="TxtTotalDePlata"
                    Text="275.00 lei"
                    FontSize="48"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    Foreground="#333333"/>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- BUTOANE METODE DE PLATĂ (2x2 Grid) -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Grid Grid.Row="2" Margin="20,20,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- NUMERAR -->
            <controls:BtnUniversal x:Name="BtnNumerar" 
                Grid.Row="0" 
                Grid.Column="0"
				BtnName="NUMERAR  "
				BtnColor="#0277BD"
				BtnImagePath="/Resources/coins.png"
				BtnImageWidth="60"
				BtnImageHeight="60"
				BtnImageOpacity="0.3"
				BtnImageHorizontalAlign="Left"
				BtnImageVerticalAlign="Center"
				BtnFontSize="16"
				BtnTextHorizontalAlign="Right"
				Margin="5"
				Click="BtnNumerar_Click"/>

            <!-- CARD -->
            <controls:BtnUniversal x:Name="BtnCard"
                Grid.Row="0"
				Grid.Column="1"
				BtnName="CARD  "
				BtnColor="#0277BD"
				BtnImagePath="/Resources/card.png"
				BtnImageWidth="60"
				BtnImageHeight="60"
				BtnImageOpacity="0.3"
				BtnImageHorizontalAlign="Left"
				BtnImageVerticalAlign="Center"
				BtnFontSize="16"
				BtnTextHorizontalAlign="Right"
				Margin="5"
				Click="BtnCard_Click"/>

            <!-- ALTELE -->
            <controls:BtnUniversal x:Name="BtnAltele"
				Grid.Row="1" 
				Grid.Column="0"
				BtnName="ALTE METODE"
				BtnColor="#D3D3D3"
				BtnFontSize="16"
				Margin="5"/>

            <!-- BACSIS -->
            <controls:BtnUniversal x:Name="BtnBacsis" 
				Grid.Row="1"
				Grid.Column="1"
				BtnName="BACSIS  "
				BtnColor="#FFB300"
				BtnImagePath="/Resources/tip.png"
				BtnImageWidth="50"
				BtnImageHeight="50"
				BtnImageOpacity="0.3"
				BtnImageHorizontalAlign="Left"
				BtnImageVerticalAlign="Center"
				BtnFontSize="16"
				BtnTextHorizontalAlign="Right"
				Margin="5"
				Click="BtnBacsis_Click"/>
        </Grid>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- INFO BON + BUTOANE ACȚIUNE -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Grid Grid.Row="3" 
      Background="#F5F5F5"
      Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Info bon/client -->
                <RowDefinition Height="Auto"/>
                <!-- Butoane -->
            </Grid.RowDefinitions>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- INFO BON CURENT -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <Border Grid.Row="0" 
            Background="White"
            Padding="15,10"
            Margin="10,10,10,5"
            CornerRadius="4"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="14" Foreground="#666666">
                <Run Text="📄 CUI pe bon:"/>
                <Run Name="TxtCuiBon" Text="45059253" FontWeight="Bold" Foreground="#333333"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- BUTOANE ACȚIUNE (ALINIATE LA DREAPTA) -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="1" Margin="10,5,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Spațiu gol stânga -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- CUI CLIENT -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- ÎNCASEAZĂ -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- ANULEAZĂ -->
                </Grid.ColumnDefinitions>

                <!-- ✅ CUI CLIENT (stânga) -->
                <controls:BtnUniversal x:Name="BtnCuiClient"
                               Grid.Column="1"
                               BtnName=""
                               BtnColor="#2196F3"
                               BtnImagePath="/Resources/user_48.png"
                               BtnImageWidth="48"
                               BtnImageHeight="48"
                               BtnImageOpacity="1"
                               BtnImageHorizontalAlign="Center"
                               BtnImageVerticalAlign="Center"
                               Width="65"
                               Height="55"
                               Margin="5,0,5,0"
                               Click="BtnRenunt_Click"
                               ToolTip="Adaugă CUI Client"/>

                <!-- ✅ ANULEAZĂ (dreapta) -->
                <controls:BtnUniversal x:Name="BtnRenunt"
                               Grid.Column="3"
                               BtnName=""
                               BtnColor="#E53935"
                               BtnImagePath="/Resources/cancel_64.png"
                               BtnImageWidth="50"
                               BtnImageHeight="50"
                               BtnImageOpacity="1"
                               BtnImageHorizontalAlign="Center"
                               BtnImageVerticalAlign="Center"
                               Width="65"
                               Height="55"
                               Margin="5,0,5,0"
                               Click="BtnRenunt_Click"
                               ToolTip="Anulează încasarea"/>
            </Grid>
        </Grid>
    </Grid>
</Window>