<!-- SearchKeypadWindow.xaml -->
<Window x:Class="SysManager.Windows.SearchKeypadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:SysManager.Controls"
        Title="Căutare Articol"
        Width="720"
        Height="380"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Border Background="#F5F5F5"
            BorderBrush="#0066CC"
            BorderThickness="3"
            CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                              Direction="315"
                              ShadowDepth="5"
                              Opacity="0.3"
                              BlurRadius="10"/>
        </Border.Effect>

        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Keypad -->
            </Grid.RowDefinitions>

            <!-- ═══════════════════════════════════════ -->
            <!-- SEARCH KEYPAD -->
            <!-- ═══════════════════════════════════════ -->
            <controls:SearchKeypad x:Name="Keypad"
                                   Grid.Row="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="10"/>
        </Grid>
    </Border>
</Window>
