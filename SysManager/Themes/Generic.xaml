                                <Button x:Name="BtnM" Grid.Column="7" Content="M" Style="{StaticResource KeyButtonStyle}"/>
                                <Button x:Name="BtnShift" Grid.Column="8" Content="SHIFT" Style="{StaticResource KeyFunctionButtonStyle}"/>
                            </Grid>

                            <!-- ═══════════════════════════════════════ -->
                            <!-- RÂNDUL 5: SPAȚIU + ANULARE -->
                            <!-- ═══════════════════════════════════════ -->
                            <Grid Grid.Row="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
