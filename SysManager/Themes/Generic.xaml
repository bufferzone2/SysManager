                                <Button x:Name="BtnK" Grid.Column="7" Content="K" Style="{StaticResource KeyButtonStyle}"/>
                                <Button x:Name="BtnL" Grid.Column="8" Content="L" Style="{StaticResource KeyButtonStyle}"/>
                                <Button x:Name="BtnEnter" Grid.Column="9" Content="🔍 CĂUTARE" Style="{StaticResource KeyEnterButtonStyle}"/>
                            </Grid>

                            <!-- ═══════════════════════════════════════ -->
                            <!-- RÂNDUL 4: CAPS + Z-M + SHIFT -->
                            <!-- ═══════════════════════════════════════ -->
                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.5*"/>
                                    <!-- Caps mai lat -->
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
