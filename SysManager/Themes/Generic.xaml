                                    <ColumnDefinition Width="*"/>
                                    <!-- Anulare -->
                                </Grid.ColumnDefinitions>

                                <Button x:Name="BtnSpace" Grid.Column="0" Content="SPAȚIU" Style="{StaticResource KeySpaceButtonStyle}"/>
                                <Button x:Name="BtnCancel" Grid.Column="1" Content="ANULARE" Style="{StaticResource KeyCancelButtonStyle}"/>
                            </Grid>

                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>
