                                <Button x:Name="BtnU" Content="U" Style="{StaticResource KeyButtonStyle}"/>
                                <Button x:Name="BtnI" Content="I" Style="{StaticResource KeyButtonStyle}"/>
                                <Button x:Name="BtnO" Content="O" Style="{StaticResource KeyButtonStyle}"/>
                                <Button x:Name="BtnP" Content="P" Style="{StaticResource KeyButtonStyle}"/>
                                <Button x:Name="BtnClear" Content="C" Style="{StaticResource KeyFunctionButtonStyle}"/>
                            </UniformGrid>

                            <!-- ═══════════════════════════════════════ -->
                            <!-- RÂNDUL 3: A-L + ENTER -->
                            <!-- ═══════════════════════════════════════ -->
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
