                                <Button x:Name="BtnX" Grid.Column="2" Content="X" Style="{StaticResource KeyButtonStyle}"/>
                                <Button x:Name="BtnC" Grid.Column="3" Content="C" Style="{StaticResource KeyButtonStyle}"/>
                                <Button x:Name="BtnV" Grid.Column="4" Content="V" Style="{StaticResource KeyButtonStyle}"/>
