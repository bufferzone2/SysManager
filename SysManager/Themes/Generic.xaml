<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SysManager.Controls">

    <!-- ============================================ -->
    <!-- STILUL PENTRU GroupButton (FĂRĂ ANIMAȚII)    -->
    <!-- ============================================ -->
    <Style TargetType="{x:Type local:GroupButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:GroupButton}">
                    <Border x:Name="border"
                            Background="{TemplateBinding GroupColor}"
                            BorderBrush="#2E5C8A"
                            BorderThickness="1"
                            CornerRadius="2">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Denumirea grupei -->
                            <TextBlock Grid.Row="0"
                                       Text="{TemplateBinding GroupName}"
                                       Foreground="White"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="3"
                                       TextWrapping="Wrap"/>

                            <!-- Numărul de articole -->
                            <TextBlock Grid.Row="1"
                                       Text="{TemplateBinding ProductCount}"
                                       Foreground="White"
                                       FontSize="12"
                                       TextAlignment="Center"
                                       Margin="0,0,0,5">
                            </TextBlock>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- ✅ HOVER - Albastru mai închis -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#0052B8"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#4A90E2"/>
                        </Trigger>

                        <!-- ✅ PRESSED - Albastru foarte închis (DOAR CULOARE) -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#003D82"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#FFD700"/>
                        </Trigger>

                        <!-- ✅ SELECTED - Verde cu bordură aurie -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#2E7D32"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#FFD700"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                        </Trigger>

                        <!-- ✅ DISABLED - Gri -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="#808080"/>
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================ -->
    <!-- STILUL PENTRU GestiuneButton                 -->
    <!-- ============================================ -->
    <Style TargetType="{x:Type local:GestiuneButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:GestiuneButton}">
                    <Border x:Name="border"
                        Background="{TemplateBinding GestiuneColor}"
                        BorderBrush="#8B4513"
                        BorderThickness="2"
                        CornerRadius="3"
                        Margin="1">

                        <TextBlock Text="{TemplateBinding GestiuneName}"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="5"
                               TextWrapping="Wrap"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- HOVER -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#D2691E"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#FF8C00"/>
                        </Trigger>

                        <!-- PRESSED -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#A0522D"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#FFD700"/>
                        </Trigger>

                        <!-- SELECTED -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#2E7D32"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#FFD700"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                        </Trigger>

                        <!-- DISABLED -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="#808080"/>
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================ -->
    <!-- STILUL PENTRU POSButton (BUTOANE PRODUSE)    -->
    <!-- ✅ CU NUMELE GESTIUNII ÎN PARTEA STÂNGĂ      -->
    <!-- ============================================ -->
    <Style TargetType="{x:Type local:POSButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:POSButton}">
                    <Border x:Name="border"
                    Background="{TemplateBinding ProductColor}"
                    BorderBrush="#01579B"
                    BorderThickness="1"
                    CornerRadius="2">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- Imagine -->
                                <RowDefinition Height="*"/>
                                <!-- Nume produs -->
                                <RowDefinition Height="Auto"/>
                                <!-- Preț + Gestiune -->
                            </Grid.RowDefinitions>

                            <!-- ✅ IMAGINE PRODUS (dacă există) -->
                            <Image Grid.Row="0"
                           Source="{TemplateBinding ImagePath}"
                           Stretch="UniformToFill"
                           Height="40"
                           Margin="2,2,2,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Style.Triggers>
                                            <Trigger Property="Source" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>

                            <!-- ✅ NUME PRODUS -->
                            <TextBlock Grid.Row="1"
                               Text="{TemplateBinding ProductName}"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               VerticalAlignment="Top"
                               Margin="1"
                               Padding="0"
                               TextWrapping="Wrap" 
                               FontFamily="Arial"
                               HorizontalAlignment="Center"/>

                            <!-- ✅ PARTEA DE JOS: GESTIUNE (STÂNGA) + PREȚ (DREAPTA) -->
                            <Grid Grid.Row="2" Margin="2,0,2,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <!-- Gestiune -->
                                    <ColumnDefinition Width="*"/>
                                    <!-- Spațiu gol -->
                                    <ColumnDefinition Width="Auto"/>
                                    <!-- Preț -->
                                </Grid.ColumnDefinitions>

                                <!-- ✅ NUMELE GESTIUNII (STÂNGA) -->
                                <Border Grid.Column="0"
                                        CornerRadius="2"
                                        Padding="3,1"
                                        Margin="0,0,2,0"
                                        VerticalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <!-- Ascunde dacă GestiuneName este gol -->
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=GestiuneName}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=GestiuneName}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <TextBlock Text="{TemplateBinding GestiuneName}"
                                               Foreground="White"
                                               FontSize="9"
                                               FontWeight="Bold"
                                               TextAlignment="Left"/>
                                </Border>

                                <!-- ✅ PREȚ (DREAPTA) -->
                                <Border Grid.Column="2"
                                        Padding="0"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{TemplateBinding Price}"
                                               Foreground="White"
                                               FontSize="10"
                                               FontWeight="Bold"
                                               TextAlignment="Right"
                                               Margin="0,0,4,0"
                                               Padding="2,1"/>
                                </Border>
                            </Grid>

                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- ✅ HOVER - Albastru mai deschis -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#0288D1"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#03A9F4"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                        </Trigger>

                        <!-- ✅ PRESSED - Albastru foarte închis -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#01579B"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#FFD700"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                        </Trigger>

                        <!-- ✅ DISABLED - Gri -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="#808080"/>
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================ -->
    <!-- STILURI BUTOANE PENTRU NUMERIC KEYPAD        -->
    <!-- ✅ IMPORTANT: TREBUIE SĂ FIE ÎNAINTE DE NumericKeypad! -->
    <!-- ============================================ -->

    <!-- Stil butoane numerice (0-9, punct) -->
    <Style x:Key="NumericButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#0066CC"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="6"
                        SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#0052B8"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#003D82"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                            <Setter Property="Foreground" Value="#999999"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Stil butoane funcții (Backspace, Clear, Minus) -->
    <Style x:Key="FunctionButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#FF9800"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="6"
                        SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#F57C00"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#E65100"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                            <Setter Property="Foreground" Value="#999999"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Stil buton Enter (verde, mai mare) -->
    <Style x:Key="EnterButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#4CAF50"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="6"
                        SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#43A047"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#2E7D32"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Stil buton Cancel (roșu) -->
    <Style x:Key="CancelButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#E53935"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="6"
                        SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#D32F2F"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#C62828"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================ -->
    <!-- STILUL PENTRU NumericKeypad                  -->
    <!-- ✅ TREBUIE SĂ FIE DUPĂ STILURILE BUTOANELOR! -->
    <!-- ============================================ -->
    <Style TargetType="{x:Type local:NumericKeypad}">
        <Setter Property="Background" Value="#F5F5F5"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Width" Value="320"/>
        <Setter Property="Height" Value="320"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:NumericKeypad}">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="8"
                    Padding="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <!-- 4 rânduri pentru butoane -->
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <!-- 4 coloane -->
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- ═══════════════════════════════════════ -->
                            <!-- RÂNDUL 1: 7, 8, 9, BACKSPACE -->
                            <!-- ═══════════════════════════════════════ -->
                            <Button x:Name="Btn7" Grid.Row="0" Grid.Column="0" 
                                Content="7" Style="{StaticResource NumericButtonStyle}"/>
                            <Button x:Name="Btn8" Grid.Row="0" Grid.Column="1" 
                                Content="8" Style="{StaticResource NumericButtonStyle}"/>
                            <Button x:Name="Btn9" Grid.Row="0" Grid.Column="2" 
                                Content="9" Style="{StaticResource NumericButtonStyle}"/>
                            <Button x:Name="BtnBackspace" Grid.Row="0" Grid.Column="3" 
                                Content="⌫" Style="{StaticResource FunctionButtonStyle}"/>

                            <!-- ═══════════════════════════════════════ -->
                            <!-- RÂNDUL 2: 4, 5, 6, CLEAR -->
                            <!-- ═══════════════════════════════════════ -->
                            <Button x:Name="Btn4" Grid.Row="1" Grid.Column="0" 
                                Content="4" Style="{StaticResource NumericButtonStyle}"/>
                            <Button x:Name="Btn5" Grid.Row="1" Grid.Column="1" 
                                Content="5" Style="{StaticResource NumericButtonStyle}"/>
                            <Button x:Name="Btn6" Grid.Row="1" Grid.Column="2" 
                                Content="6" Style="{StaticResource NumericButtonStyle}"/>
                            <Button x:Name="BtnClear" Grid.Row="1" Grid.Column="3" 
                                Content="C" Style="{StaticResource FunctionButtonStyle}"/>

                            <!-- ═══════════════════════════════════════ -->
                            <!-- RÂNDUL 3: 1, 2, 3, MINUS -->
                            <!-- ═══════════════════════════════════════ -->
                            <Button x:Name="Btn1" Grid.Row="2" Grid.Column="0" 
                                Content="1" Style="{StaticResource NumericButtonStyle}"/>
                            <Button x:Name="Btn2" Grid.Row="2" Grid.Column="1" 
                                Content="2" Style="{StaticResource NumericButtonStyle}"/>
                            <Button x:Name="Btn3" Grid.Row="2" Grid.Column="2" 
                                Content="3" Style="{StaticResource NumericButtonStyle}"/>
                            <Button x:Name="BtnMinus" Grid.Row="2" Grid.Column="3" 
                                Content="+/-" Style="{StaticResource FunctionButtonStyle}"/>

                            <!-- ═══════════════════════════════════════ -->
                            <!-- RÂNDUL 4: 0, PUNCT, ENTER, CANCEL -->
                            <!-- ═══════════════════════════════════════ -->
                            <Button x:Name="Btn0" Grid.Row="3" Grid.Column="0" 
                                Content="0" Style="{StaticResource NumericButtonStyle}"/>
                            <Button x:Name="BtnDot" Grid.Row="3" Grid.Column="1" 
                                Content="." Style="{StaticResource NumericButtonStyle}"/>
                            <Button x:Name="BtnEnter" Grid.Row="3" Grid.Column="2" 
                                Content="✓" Style="{StaticResource EnterButtonStyle}"/>
                            <Button x:Name="BtnCancel" Grid.Row="3" Grid.Column="3" 
                                Content="ANULARE" Style="{StaticResource CancelButtonStyle}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Adaugă acest stil în Generic.xaml, după stilul pentru NumericKeypad -->

    <!-- ============================================ -->
    <!-- STILURI PENTRU BUTOANE SearchKeypad          -->
    <!-- ============================================ -->

    <!-- Stil buton literă/cifră (alb) -->
    <Style x:Key="KeyButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="#333333"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4"
                        SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#E3F2FD"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#BBDEFB"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Stil buton funcție (gri) - Backspace, Clear, Caps, Shift -->
    <Style x:Key="KeyFunctionButtonStyle" TargetType="Button" BasedOn="{StaticResource KeyButtonStyle}">
        <Setter Property="Background" Value="#E0E0E0"/>
        <Setter Property="Foreground" Value="#333333"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Stil buton Spațiu (mai lat) -->
    <Style x:Key="KeySpaceButtonStyle" TargetType="Button" BasedOn="{StaticResource KeyButtonStyle}">
        <Setter Property="Background" Value="#F5F5F5"/>
    </Style>

    <!-- Stil buton Enter (verde) -->
    <Style x:Key="KeyEnterButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#4CAF50"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="4"
                        SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#43A047"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#2E7D32"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Stil buton Cancel (roșu) -->
    <Style x:Key="KeyCancelButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#E53935"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="4"
                        SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#D32F2F"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#C62828"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================ -->
    <!-- STILUL PENTRU SearchKeypad                   -->
    <!-- ============================================ -->
    <Style TargetType="{x:Type local:SearchKeypad}">
        <Setter Property="Background" Value="#F5F5F5"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Width" Value="700"/>
        <Setter Property="Height" Value="320"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SearchKeypad}">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        Padding="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <!-- Display -->
                                <RowDefinition Height="50"/>
                                <!-- 5 rânduri butoane -->
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- ═══════════════════════════════════════ -->
                            <!-- DISPLAY TEXT -->
                            <!-- ═══════════════════════════════════════ -->
                            <Border Grid.Row="0"
                                Background="White"
                                BorderBrush="#0066CC"
                                BorderThickness="2"
                                CornerRadius="4"
                                Margin="2">
                                <TextBlock Text="{TemplateBinding CurrentText}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#0066CC"
                                       VerticalAlignment="Center"
                                       Padding="10,0"
                                       TextTrimming="CharacterEllipsis"/>
                            </Border>

                            <!-- ═══════════════════════════════════════ -->
                            <!-- RÂNDUL 1: 1-9, 0, BACKSPACE -->
                            <!-- ═══════════════════════════════════════ -->
                            <UniformGrid Grid.Row="1" Rows="1" Columns="11">
                                <Button x:Name="Btn1" Content="1" Style="{StaticResource KeyButtonStyle}"/>
                                <Button x:Name="Btn2" Content="2" Style="{StaticResource KeyButtonStyle}"/>
                                <Button x:Name="Btn3" Content="3" Style="{StaticResource KeyButtonStyle}"/>
                                <Button x:Name="Btn4" Content="4" Style="{StaticResource KeyButtonStyle}"/>
